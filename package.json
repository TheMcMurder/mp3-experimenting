{
  "name": "audiobook-metadata-manager",
  "version": "0.0.1",
  "description": "",
  "main": "./src/main.js",
  "scripts": {
    "start": "npm run start-dev && electron-forge start",
    "start-dev": "concurrently 'npm:start-electron' 'npm:start-spa'",
    "start-electron": "electron .",
    "start-spa": "rollup -c -w",
    "build": "npm run build:icon && rollup -c",
    "build:icon": "node ./build-scripts/build-icons.js",
    "testing": "node ./src/experimenting/testing.mjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make"
  },
  "author": "Justin McMurdie",
  "license": "ISC",
  "engines": {
    "node": ">=16.14.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.6",
    "@xstate/react": "^3.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "ffmetadata": "^1.7.0",
    "ffmpeg-static-electron": "^2.0.3",
    "final-form": "^4.20.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-final-form": "^6.5.9",
    "xstate": "^4.31.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "electron": "^18.0.1",
    "postcss": "^8.4.12",
    "rollup": "^2.70.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "svg-app-icon": "^1.1.0",
    "tailwindcss": "^3.0.23"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./build/icons/icon",
        "ignore": [
          "src/experimenting/",
          "src/spa/",
          "src/images/",
          ".git",
          "node_modules/.bin",
          "node_modules/electron",
          "node_modules/electron-prebuilt",
          "node_modules/electron-prebuilt-compile"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Audiobook Metadata manager"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "icon": "./build/icons/512x512.png"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
